{
    "command-line": "mkdir -p [OUTPUT_FILE]; rm -f [OUTPUT_FILE]/*.out; test_script.sh [INPUT_FILES] [OUTPUT_FILE]",
    "container-image": {
        "image": "spot_centos_latest",
        "type": "docker"
    },
    "schema-version": "0.5",
    "description": "Test script for the Spot tool",
    "inputs": [
        {
            "description": "input files",
            "id": "input_file",
            "name": "input file",
            "optional": false,
            "type": "File",
            "value-key": "[INPUT_FILES]"
        },
        {
            "description": "outputt files",
            "id": "output_file",
            "name": "output file",
            "optional": false,
            "type": "String",
            "value-key": "[OUTPUT_FILE]"
        }
    ],
    "invocation-schema": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "additionalProperties": false,
        "dependencies": {},
        "description": "Invocation schema for test script for the Spot tool.",
        "properties": {
            "input_file": {
                "type": "string"
            },
            "output_file": {
                "type": "string"
            }
        },
        "required": [
            "input_file",
            "output_file"
        ],
        "title": "Test script for the Spot tool.invocationSchema",
        "type": "object"
    },
    "name": "Test script for the Spot tool",
    "output-files": [
        {
            "description": "output folder path",
            "id": "output_folder",
            "name": "results",
            "optional": false,
            "path-template": "[OUTPUT_FILE]"
        }
    ],
    "tool-version": "CentOS7"
}
